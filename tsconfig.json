{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true 
  },
  "compileOnSave": true,
  "include": ["src", "src/config"],
  "exclude": ["node_modules"],
}
